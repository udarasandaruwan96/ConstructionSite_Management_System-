<%- include('layout/header')%>

<div class="container">
    <div>
        <div class="row my-4">
            <div class="col-lg-26">
                <% if (message) { %> 
                    <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                        <button class="btn-close" type="button" data-bs-dismiss="alert"
                        arial-label="Close"></button>
                        <strong><%= message.message %></strong>
                    </div>
                <% } %>
    
                <div class="table-responsive">
    
                    <% if (employees != '') { %>
                        <table>
                            <thead>
                                <tr class="table-success fontS">
                                    <th>Employee Type</th>
                                    <th>Full Name</th>
                                    <th>Mobile</th>
                                    <th>Email</th>
                                    <th>Qualifications</th>
                                    <th>Profile Picture</th>
                                    <th>Project 1 Image</th>
                                    <th>Project 1 Description</th>
                                    <th>Project 2 Image</th>
                                    <th>Project 2 Description</th>
                                    <th>Project 3 Image</th>
                                    <th>Project 3 Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% employees.forEach((row,index)=> { %>
                                <tr class="align-middle">
                                    <td><%= row.employeeType %></td>
                                    <td><%= row.fullName %></td>
                                    <td><%= row.mobile %></td>
                                    <td><%= row.email %></td>
                                    <td><%= row.qualifications %></td>
                                    <td><img src="<%= row.profile_pic %>" width="50" class="img-proficepic" mt-1 /></td>
                                    <td><img src="<%= row.project01_img %>" width="50" class="img-proj1" mt-1 /></td>
                                    <td><%= row.project01_disc %></td>
                                    <td><img src="<%= row.project02_img %>" width="50" class="img-proj2" mt-1 /></td>
                                    <td><%= row.project02_disc %></td>
                                    <td><img src="<%= row.project03_img %>" width="50" class="img-proj3" mt-1 /></td>
                                    <td><%= row.project03_disc %></td>
                                </tr>
                                 <% }) %>
                            </tbody>
                        </table>
                    <% }  else { %>
                        <h1 class="text-center text-secondary mt-5">No employee found in the database .!</h1>
                    <% } %>
    
                    
                </div>
            </div>
        </div>
    </div>
    
</div>
<div class = "frameAddGDForm">
    <div class="container">
        <div>
            <div>
                <h3 class="container mt-5 d-flex justify-content-center">Add Garden Designer</h3>

                <% if(typeof alert != 'undefined') { %>
                    <% alert.forEach(function(error) { %>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <strong><%= error.msg %></strong>
                            <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                              <span aria-hidden="true">&times;</span>
                            </button>
                          </div>
                    <% }) %>
                <% } %>
                <form action="/addAdminGD" method="post" id="Ã¤dd-form" enctype="multipart/form-data">
                    <div class="form-group row mt-3">
                        <label for="architect" class="col-sm-2 col-form-label required" > Garden Designer's Name</label>
                        <div class="col-sm-8">
                           <input type="text" class="form-control"  name="Name" placeholder="Name" required></center>
                        </div>
                    </div>

