<%- include('layout/header')%>

<div class="frameAddEmForm">
  <div class="container">
      <div >
          <div >
              <h3 class="container mt-5 d-flex justify-content-center"> Employee Registration </h3>

              <% if(typeof alert != 'undefined') { %>
                <% alert.forEach(function(error) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong><%= error.msg %></strong>
                        <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                <% }) %>
            <% } %>

              <form action="/add_Employee" method="post" id="Ã¤dd-form" enctype="multipart/form-data" >
                <div  class="form-group row mt-3">
                  
                  <label for="employeeType" class="col-sm-2 col-form-label required"> Employee Type</label>
                  <div class="col-sm-8">
                  <input type="text" class="form-control" name="employeeType" placeholder="Employee Type">
                  </div>
                </div>
                
                <div  class="form-group row mt-3">
                  
                  <label for="fullName" class="col-sm-2 col-form-label required"> Employee Name</label>
                  <div class="col-sm-8">
                  <input type="text" class="form-control" name="fullName" placeholder="Employee Name">
                  </div>
                </div>

                  <div class="form-group row mt-3">
                    <label for="mobile" class="col-sm-2 col-form-label required">Mobile Number</label>
                    <div class="col-sm-8">
                    <input type="mobile" class="form-control" name="mobile" aria-describedby="mobile" placeholder="mobile">
                    </div>
                  </div>
    
                  <div class="form-group row mt-3">
                      <label for="email" class="col-sm-2 col-form-label required">Email</label>
                      <div class="col-sm-8">
                      <input type="email" class="form-control" name="email" placeholder="email">
                      </div>
                    </div>


                    <div class="form-group row mt-3">
                      <label for="qualifications" class="col-sm-2 col-form-label required"> Qualifications</label>
                      <div class="col-sm-8">
                      <input type="qualifications" class="form-control" name="qualifications" placeholder="qualifications">
                      </div>
                    </div>


                    <div class="form-group row mt-3">
                      <label for="profile_pic" class="col-sm-2 col-form-label required"> Profile picture</label>
                      <div class="col-sm-8">
                      <input type="file" class="form-control" name="profile_pic" placeholder="Select Image">
                      </div>
                    </div>

                    <div class="form-group row mt-3">
                      <label for="project01_img" class="col-sm-2 col-form-label required"> Project 01 Image</label>
                      <div class="col-sm-8">
                      <input type="file" class="form-control" name="project01_img" placeholder="Select Image">
                      </div>
                    </div>
                    
                    <div class="form-group row mt-3">
                      <label for="project01_disc" class="col-sm-2 col-form-label required">Project 01 Description </label>
                      <div class="col-sm-8">
                      <textarea class="form-control" class="form-control" name="project01_disc" placeholder="project 1 description" rows="3"></textarea>
                      </div>
                    </div>

                    <div class="form-group row mt-3">
                      <label for="project02_img" class="col-sm-2 col-form-label">Project 02 Image</label>
                      <div class="col-sm-8">
                      <input type="file" class="form-control" name="project02_img" placeholder="Select Image">
                      </div>
                    </div>
                            
                    <div class="form-group row mt-3">
                      <label for="project02_disc" class="col-sm-2 col-form-label">Projec 02 Description</label>
                      <div class="col-sm-8">
                      <textarea class="form-control" class="form-control" name="project02_disc" placeholder="project 2 description" rows="3"></textarea>
                      </div>
                    </div>

                    <div class="form-group row mt-3">
                      
                      <label for="project03_img" class="col-sm-2 col-form-label">Project 03 Image</label>
                      <div class="col-sm-8">
                      <input type="file" class="form-control" name="project03_img" placeholder="Select Image">
                      </div>

                    </div>
                            
                    <div class="form-group row mt-3">
                      <label for="project03_disc" class="col-sm-2 col-form-label" >Project 03 Description</label>
                      <div class="col-sm-8">
                      <textarea class="form-control" class="form-control" name="project03_disc" placeholder="project 3 description"  rows="3"></textarea>
                      </div>
                    </div>

                    <center>
                      <button type="submit" class="btn btn-success col-sm-1 mt-3"><b>Submit</b></button>
                      </center>
                    </form>

                  <center>
                      <a href='/add_Employee'><button class='btn btn-info col-sm-1 mt-3'><b>Clear</b></button></a>
                  </center>


                
              
          </div>
      </div>
  </div>
</div>
      

<%- include('layout/footer')%> 