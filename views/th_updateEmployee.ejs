<%- include('layout/header')%>

<div class="frameEditEmForm">
<div class="container">
    <div >
        <div >
            <h3 class="container mt-5 d-flex justify-content-center"> Edit Employee Details </h3>

            <form action="/update_Employee/<%= employees._id %>" method="post" id="Ã¤dd-form" enctype="multipart/form-data" >
              <div  class="form-group row mt-3">
                
                <label for="employeeType" class="col-sm-2 col-form-label required"> Employee Type</label>
                <div class="col-sm-8">
                <input type="text" class="form-control" name="employeeType" placeholder="Employee Type" value="<%= employees.employeeType %>">
                </div>
              </div>

              <div  class="form-group row mt-3">
                
                <label for="fullName" class="col-sm-2 col-form-label required"> Employee Name</label>
                <div class="col-sm-8">
                <input type="text" class="form-control" name="fullName" placeholder="Employee Name" value="<%= employees.fullName %>">
                </div>
              </div>

                <div class="form-group row mt-3">
                  <label for="mobile" class="col-sm-2 col-form-label required">Mobile Number</label>
                  <div class="col-sm-8">
                  <input type="mobile" class="form-control" name="mobile" aria-describedby="mobile" placeholder="mobile" value="<%= employees.mobile %>">
                  </div>
                </div>
   
                <div class="form-group row mt-3">
                    <label for="email" class="col-sm-2 col-form-label required">Email</label>
                    <div class="col-sm-8">
                    <input type="email" class="form-control" name="email" placeholder="email" value="<%= employees.email %>">
                    </div>
                  </div>


                  <div class="form-group row mt-3">
                    <label for="qualifications" class="col-sm-2 col-form-label required"> Qualifications</label>
                    <div class="col-sm-8">
                    <input type="qualifications" class="form-control" name="qualifications" placeholder="qualifications" value="<%= employees.qualifications %>">
                    </div>
                  </div>


                  <div class="form-group row mt-3">
                    <label for="profile_pic" class="col-sm-2 col-form-label required"> Profile picture</label>
                    <div class="col-sm-8">
                    <input type="file" class="form-control" name="profile_pic" placeholder="Select Image" >
                    <img src="/<%= employees.profile_pic  %>" width="100" class="profile_pic" />
                    <input type="hidden" name="old-profile_pic" value="<%= employees.profile_pic %>" />
                    </div>
                  </div>

                  <div class="form-group row mt-3">
                    <label for="project01_img" class="col-sm-2 col-form-label required"> Project 01 Image</label>
                    <div class="col-sm-8">
                    <input type="file" class="form-control" name="project01_img" placeholder="Select Image">
                    <img src="/<%= employees.project01_img  %>" width="100" class="project01_img" />
                    <input type="hidden" name="old-project01_img" value="<%= employees.project01_img %>" />
                    </div>
                  </div>
                   
                  <div class="form-group row mt-3">
                    <label for="project01_disc" class="col-sm-2 col-form-label required">Project 01 Description </label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control"  name="project01_disc" placeholder="project 1 description"  value="<%= employees.project01_disc %>">
                    </div>
                  </div>

                  <div class="form-group row mt-3">
                    <label for="project02_img" class="col-sm-2 col-form-label">Project 02 Image</label>
                    <div class="col-sm-8">
                    <input type="file" class="form-control" name="project02_img" placeholder="Select Image">
                    <img src="/<%= employees.project02_img  %>" width="100" class="project02_img" />
                    <input type="hidden" name="old-project01_img" value="<%= employees.project01_img %>" />
                    </div>
                  </div>
                          
                  <div class="form-group row mt-3">
                    <label for="project02_disc" class="col-sm-2 col-form-label">Project 02 Description</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control"  name="project02_disc" placeholder="project 2 description"  value="<%= employees.project02_disc %>">
                    </div>
                  </div>

                  <div class="form-group row mt-3">
                    
                    <label for="project03_img" class="col-sm-2 col-form-label">Project 03 Image</label>
                    <div class="col-sm-8">
                    <input type="file" class="form-control" name="project03_img" placeholder="Select Image">
                    <img src="/<%= employees.project03_img  %>" width="100" class="project03_img" />
                    <input type="hidden" name="old-project01_img" value="<%= employees.project01_img %>" />
                    </div>

                  </div>
                          
                  <div class="form-group row mt-3">
                    <label for="project03_disc" class="col-sm-2 col-form-label" >Project 03 Description</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control"  name="project03_disc" placeholder="project 3 description"  value="<%= employees.project03_disc %>">
                    </div>
                  </div>
                
                  <!-- <button type="submit"  class="btn btn-primary col-sm-2 mt-5">Update</button> -->

                  <center> <input type="submit" name="submit" value="Update Employee" class="btn btn-success" /></center>

                

              
              </form>
        </div>
    </div>
</div>
</div>
      

<%- include('layout/footer')%> 