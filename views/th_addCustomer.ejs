<%- include('layout/header')%>

<div class="frameAddEmForm">
  <div class="container">
      <div >
          <div >
              <h3 class="container mt-5 d-flex justify-content-center"> Register </h3>

              <% if(typeof alert != 'undefined') { %>
                <% alert.forEach(function(error) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong><%= error.msg %></strong>
                        <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                <% }) %>
            <% } %>

              <form action="/add_Customer" method="post" id="Ã¤dd-form" enctype="multipart/form-data" >
                <div  class="form-group row mt-3">
                  
                  <label for="employeeType" class="col-sm-2 col-form-label required"> Full Name </label>
                  <div class="col-sm-8">
                  <input type="text" class="form-control" name="employeeType" placeholder="Employee Type">
                  </div>
                </div>

                <div  class="form-group row mt-3">
                  
                  <label for="fullName" class="col-sm-2 col-form-label required"> NIC Number </label>
                  <div class="col-sm-8">
                  <input type="text" class="form-control" name="fullName" placeholder="Employee Name">
                  </div>
                </div>

                <div class="form-group row mt-3">
                    <label for="email" class="col-sm-2 col-form-label required">Email</label>
                    <div class="col-sm-8">
                    <input type="email" class="form-control" name="email" placeholder="email">
                    </div>
                  </div>

                <div class="form-group row mt-3">
                    <label for="mobile" class="col-sm-2 col-form-label required">Phone Number</label>
                    <div class="col-sm-8">
                    <input type="mobile" class="form-control" name="mobile" aria-describedby="mobile" placeholder="mobile">
                    </div>
                </div>

                <div class="form-group row mt-3">
                    <label for="mobile" class="col-sm-2 col-form-label required">Address></label>
                    <div class="col-sm-8">
                    <input type="mobile" class="form-control" name="mobile" aria-describedby="mobile" placeholder="mobile">
                    </div>
                </div>

                <div class="form-group row mt-3">
                    <label for="mobile" class="col-sm-2 col-form-label required">Password</label>
                    <div class="col-sm-8">
                    <input type="mobile" class="form-control" name="mobile" aria-describedby="mobile" placeholder="mobile">
                    </div>
                </div>

                <div class="form-group row mt-3">
                    <label for="mobile" class="col-sm-2 col-form-label required">Confirm Password</label>
                    <div class="col-sm-8">
                    <input type="mobile" class="form-control" name="mobile" aria-describedby="mobile" placeholder="mobile">
                    </div>
                </div>
    
                  
                <center>
                      <button type="submit" class="btn btn-success col-sm-1 mt-3"><b>Submit</b></button>
                </center>
                </form>

                <center>
                      <a href='/add_Employee'><button class='btn btn-info col-sm-1 mt-3'><b>Clear</b></button></a>
                </center>


                
              
          </div>
      </div>
  </div>
</div>
      

<%- include('layout/footer')%> 